<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/activity_history_list_element_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_history_text_padding"
        android:paddingRight="@dimen/activity_history_text_padding"
        android:paddingTop="@dimen/activity_history_text_padding"
        android:textColor="@color/colorPrimary"
        tools:text="Какой-то русский текст"/>

    <TextView
        android:id="@+id/activity_history_list_element_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_history_text_padding"
        android:paddingLeft="@dimen/activity_history_text_padding"
        android:paddingRight="@dimen/activity_history_text_padding"
        tools:text="Russian"/>
</LinearLayout>